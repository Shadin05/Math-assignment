#include<iostream>
using namespace std;
int main ()
{
    int r1,c1,r2,c2;
    cout << "rows of matrix 1:";
    cin >> r1;
    cout << "cols of matrix 1";
    cin >> c1;
    cout << "rows of matrix 2:";
    cin >> r2;
    cout << "cols of matrix 2:";
    cin >> c2;

    if (r1 != r2 || c1 != c2){
        cout << "addition/ subtraction not possible";
    return 0;
    }
    int A[r1][c1], B[r2][c2],C[r1][c1];

    cout << "\nenter matirx 1 elements:\n";
    for( int i = 0; i < r1;i++)
        for(int j = 0; j < c1;j++)
            cin >> A[i][j];

        cout <<"\nenter matrix 2 elements:\n";
        for (int i = 0; i < r2;i++)
            for (int j = 0; j < c1; j++)

                    cin >> B[i][j];

            cout << "\nmatrix sum:\n";
            for(int i = 0; i < r1;i++){
                    for(int j = 0; j < c1;j++){
                            C[i][j] = A[i][j] + B [i][j];
                    cout << C[i][j] << " ";
                    }
                    cout << endl;
            }
            cout << "\nmatrix difference:\n";
            for(int i = 0; i < r1;i++){
                    for ( int j = 0; j < c1;j++){
                            C[i][j] = A[i][j] - B[i][j];
                    cout << C[i][j] << " ";

                    }
                    cout << endl;
            }

            return 0;

}
