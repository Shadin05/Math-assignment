#include<iostream>
using namespace std;
 int main ()
 {
     int n,isSkewSymmetric = 1;
     cout << "enter the size of squre matrix:";
     cin >> n;

     int **mat = new int*[n];
     for (int i = 0; i < n;i++)
        mat [i] = new int [n];
     cout << "\nenter element of matrix A:\n";
     for (int row = 0; row < n; row++)
     {
         for(int col = 0; col < n; col++)
         {
             cout << "A["<< row << "]["<< col << "]: ";
             cin >> mat[row][col];
         }
         cout << endl;
     }
     for (int row = 0; row < n; row++)
     {
         for(int col = 0; col < n; col++)
         {
             if (row > col)
             {
                 if(mat[row][col] != -mat[col][row])
                 {
                     isSkewSymmetric = 0;
                     break;
                 }
             }
         }
         if (!isSkewSymmetric) break;

     }
     if (isSkewSymmetric)
        cout <<"the matrix is skew-symmetric";
     else
        cout <<"the matrix is not skew-Symmetric";
     for ( int i =0;i<n;i++)
        delete [] mat [i];
     delete[] mat;
     return 0;
 }
